<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rpi.barpi.BarActivity">

    <LinearLayout
        android:id="@+id/ba_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ba_btnstarone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="rateBar"
            android:text="*" />

        <Button
            android:id="@+id/ba_btnstartwo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="rateBar"
            android:text="*" />

        <Button
            android:id="@+id/ba_btnstarthree"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="rateBar"
            android:text="*" />

        <Button
            android:id="@+id/ba_btnstarfour"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="rateBar"
            android:text="*" />

        <Button
            android:id="@+id/ba_btnstarfive"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="rateBar"
            android:text="*" />

    </LinearLayout>

    <!--Place list directly below bar rating line -->
    <ListView
        android:id="@+id/eventListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ba_rating"


        />

</RelativeLayout>
